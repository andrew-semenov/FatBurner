<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <TextView
        android:id="@+id/breakfestLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="18dp"
        android:text="Завтрак"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondBreakfestLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/breakfestLabel"
        android:layout_alignStart="@+id/breakfestLabel"
        android:layout_below="@+id/breakfestTime"
        android:layout_marginTop="15dp"
        android:text="Перекус"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lunchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondBreakfestLabel"
        android:layout_alignStart="@+id/secondBreakfestLabel"
        android:layout_below="@+id/secondBreakfestTime"
        android:layout_marginTop="14dp"
        android:text="Обед"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondLunchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lunchLabel"
        android:layout_alignStart="@+id/lunchLabel"
        android:layout_below="@+id/lunchTime"
        android:layout_marginTop="15dp"
        android:text="Перекус"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondLunchLabel"
        android:layout_alignStart="@+id/secondLunchLabel"
        android:layout_below="@+id/secondLunchShema"
        android:layout_marginTop="17dp"
        android:text="Ужин"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/applyMealCalendarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:background = "@color/White"
        android:src="@drawable/ic_down_chevron"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/breakfestCalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/breakfestLabel"
        android:layout_alignBottom="@+id/breakfestLabel"
        android:layout_alignEnd="@+id/breakfestShema"
        android:layout_alignRight="@+id/breakfestShema"
        android:text="500 cal"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/secondBreakfestCalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/secondBreakfestLabel"
        android:layout_alignBottom="@+id/secondBreakfestLabel"
        android:layout_alignEnd="@+id/secondBreakfestShema"
        android:layout_alignRight="@+id/secondBreakfestShema"
        android:text="200 cal"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lunchCalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lunchLabel"
        android:layout_alignBottom="@+id/lunchLabel"
        android:layout_alignEnd="@+id/secondBreakfestShema"
        android:layout_alignRight="@+id/secondBreakfestShema"
        android:text="500 cal"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/secondLunchCalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/secondLunchLabel"
        android:layout_alignBottom="@+id/secondLunchLabel"
        android:layout_alignLeft="@+id/lunchCalLabel"
        android:layout_alignStart="@+id/lunchCalLabel"
        android:text="200 cal"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/dinnerCalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dinner"
        android:layout_alignBottom="@+id/dinner"
        android:layout_alignLeft="@+id/secondLunchCalLabel"
        android:layout_alignStart="@+id/secondLunchCalLabel"
        android:text="500 cal"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/breakfestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondBreakfestTime"
        android:layout_alignStart="@+id/secondBreakfestTime"
        android:layout_below="@+id/breakfestCalLabel"
        android:layout_marginTop="16dp"
        android:text="7:30"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/secondBreakfestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lunchTime"
        android:layout_alignStart="@+id/lunchTime"
        android:layout_below="@+id/secondBreakfestCalLabel"
        android:layout_marginTop="17dp"
        android:text="10:30"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lunchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondLunchTime"
        android:layout_alignStart="@+id/secondLunchTime"
        android:layout_below="@+id/lunchCalLabel"
        android:layout_marginTop="18dp"
        android:text="1:30"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/secondLunchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:30"
        android:textSize="24sp"
        android:layout_above="@+id/view2"
        android:layout_alignLeft="@+id/dinnerTime"
        android:layout_alignStart="@+id/dinnerTime" />

    <TextView
        android:id="@+id/dinnerTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:text="17:30"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/dinnerShema"
        android:layout_toRightOf="@+id/dinnerShema"
        android:layout_toEndOf="@+id/dinnerShema" />

    <Spinner
        android:id="@+id/breakfestShema"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/breakfestTime"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        android:layout_alignLeft="@+id/secondBreakfestLabel"
        android:layout_alignStart="@+id/secondBreakfestLabel" />

    <Spinner
        android:id="@+id/secondBreakfestShema"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lunchLabel"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        android:layout_alignLeft="@+id/secondBreakfestLabel"
        android:layout_alignStart="@+id/secondBreakfestLabel" />

    <Spinner
        android:id="@+id/lunchShema"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        android:layout_above="@+id/secondLunchLabel"
        android:layout_alignLeft="@+id/lunchLabel"
        android:layout_alignStart="@+id/lunchLabel" />

    <Spinner
        android:id="@+id/secondLunchShema"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textSize="18sp"
        android:layout_below="@+id/secondLunchLabel"
        android:layout_alignLeft="@+id/dinner"
        android:layout_alignStart="@+id/dinner" />

    <Spinner
        android:id="@+id/dinnerShema"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/dinner"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/dinner"
        android:layout_alignStart="@+id/dinner" />

    <ImageButton
        android:id="@+id/breakfestBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_right_arrow"
        android:background="@color/White"
        android:layout_alignTop="@+id/breakfestLabel"
        android:layout_alignLeft="@+id/applyMealCalendarBtn"
        android:layout_alignStart="@+id/applyMealCalendarBtn" />

    <ImageButton
        android:id="@+id/secondBreakfestBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_right_arrow"
        android:background="@color/White"
        android:layout_alignTop="@+id/secondBreakfestCalLabel"
        android:layout_alignLeft="@+id/breakfestBtn"
        android:layout_alignStart="@+id/breakfestBtn" />

    <ImageButton
        android:id="@+id/lunchBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_right_arrow"
        android:background="@color/White"
        android:layout_alignTop="@+id/lunchCalLabel"
        android:layout_alignLeft="@+id/secondBreakfestBtn"
        android:layout_alignStart="@+id/secondBreakfestBtn" />

    <ImageButton
        android:id="@+id/secondLunchBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_right_arrow"
        android:background="@color/White"
        android:layout_alignTop="@+id/secondLunchCalLabel"
        android:layout_alignLeft="@+id/lunchBtn"
        android:layout_alignStart="@+id/lunchBtn" />

    <ImageButton
        android:id="@+id/dinnerBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_right_arrow"
        android:background="@color/White"
        android:layout_alignTop="@+id/dinnerCalLabel"
        android:layout_alignLeft="@+id/secondLunchBtn"
        android:layout_alignStart="@+id/secondLunchBtn" />

    <TextView
        android:id="@+id/legendLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/dinnerShema"
        android:layout_alignStart="@+id/dinnerShema" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/Blue"
        android:layout_above="@+id/breakfestCalLabel"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/Blue"
        android:layout_below="@+id/breakfestShema"
        android:visibility="visible"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/Blue"
        android:layout_below="@+id/secondBreakfestShema"
        android:visibility="visible"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/Blue"
        android:layout_below="@+id/lunchShema"
        android:visibility="visible"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/Blue"
        android:layout_below="@+id/secondLunchShema"
        android:visibility="visible"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/Blue"
        android:layout_below="@+id/dinnerShema"
        android:visibility="visible"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

</RelativeLayout>